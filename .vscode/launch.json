    "version": "0.2.0",
    "configurations": [
        {
            "type": "emmylua_launch",
            "request": "launch",
            "name": "debug-lua",
            "program": "lua.exe",
            "captureStd": true,
            "captureOutputDebugString": false,
            "workingDir": "${workspaceFolder}/lua",
            "arguments": ["${workspaceFolder}/lua/main.lua"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug-ts",
            "program": "${workspaceFolder}/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}